pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url:'https://github.com/Nandhini0307/program3.git', branch:'main'
            }
        }

        stage('Compile Java') {
            steps {
                script {
                    def javaHome = tool name: 'JDK 22', type: 'jdk'
                    env.JAVA_HOME = javaHome
                    env.PATH = "C:\Program Files\Java\jdk-22"
                    sh 'javac prg3.java'
                }
            }
        }

        stage('Run Java') {
            steps {
                script {
                    def javaHome = tool name: 'JDK 22', type: 'jdk'
                    env.JAVA_HOME = javaHome
                    env.PATH = "C:\Program Files\Java\jdk-22"
                    sh 'java -cp prg3.java'
                }
            }
        }
    }
}
